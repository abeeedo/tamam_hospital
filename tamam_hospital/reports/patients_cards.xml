<odoo>

    <report
        id="report_patients_view_card"
        string="Patient Card Report"
        model="hospital.patients"
        report_type="qweb-pdf"
        name="tamam_hospital.report_patients_views"
        file="tamam_hospital.report_patients_view_card"/>

    <template id="report_patients_views">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <br/>
                            <br/>
                            <tbody>
                                <tr>
                                    <ul><td><strong>Name: </strong><span t-field="o.patient_name"/></td></ul>
                                    <ul><td><strong>Age: </strong><span t-field="o.patient_age"/></td></ul>
                                    <ul><td><strong>Group: </strong><span t-field="o.age_group"/></td></ul>
                                </tr>
                                <table class="table table-bordered mb-0" style="border: 2px solid black;">
                                    <tr>
                                        <td class="text-center align-middle" style="height: 6rem">
                                            <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', o.name_seq, 600, 150)" style="width:100%;height::4rem;"/>
                                            <span t-field="o.name_seq"/>
                                        </td>
                                    </tr>
                                </table>
                                <table class="table table-condensed" style="border: 3px solid black !important;">
                                        <t t-foreach="appointment_list" t-as="app">
                                            <tr>
                                                <td>
                                                    <t t-esc="app['name']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="app['notes']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="app['appointment_date']"/>
                                                </td>
                                            </tr>

                                        </t>
                                    </table>
                            </tbody>
                        </div>
                    </t>
                </t>
            </t>
    </template>
</odoo>